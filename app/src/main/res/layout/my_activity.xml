<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- LAYER 1: SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- User Profile Content -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/img_cover"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stitch1" />

                <!-- Profile Image with Border -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/user_profile_picture"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        app:cardCornerRadius="56dp">

                        <ImageView
                            android:id="@+id/img_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/stitch" />

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!-- Name & Class -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Da Reach"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMajor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ITE-M1"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Middle Menu Section (Year Filters & Toggle) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_filters"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_filter_buttons"
                    android:orientation="horizontal">

                    <!-- Using the FilterButton style for cleaner code -->
                    <Button
                        android:id="@+id/btnYear1"
                        style="@style/FilterButton"
                        android:text="Year 1" />

                    <Button
                        android:id="@+id/btnYear2"
                        style="@style/FilterButton"
                        android:text="Year 2" />

                    <Button
                        android:id="@+id/btnYear3"
                        style="@style/FilterButton"
                        android:text="Year 3" />

                    <Button
                        android:id="@+id/btnYear4"
                        style="@style/FilterButton"
                        android:text="Year 4" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_toggle_view"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/menu" />

            </LinearLayout>

            <!-- List Section (RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- LAYER 2: TOP NAVBAR (Floats on top of the ScrollView) -->
    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40000000"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="My Activities"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/navbar_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/outline_close_24" />

    </RelativeLayout>

</RelativeLayout>
